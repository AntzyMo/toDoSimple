{
  "name": "todosimple",
  "version": "1.1.0",
  "main": "render/dist/index.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:el": "vite build && electron-builder",
    "serve": "vite preview",
    "start": "cross-env NODE_ENV=development electron .",
    "start:build": "cross-env NODE_ENV=production electron .",
    "edev": "yarn dev | yarn start",
    "watch": "node ./render/config.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "animate.css": "^4.1.1",
    "antd": "^4.16.13",
    "axios": "^0.24.0",
    "dayjs": "^1.10.7",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.1",
    "shortcut-capture": "^1.2.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.0.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "electron-reloader": "^1.2.1",  
    "less": "^4.1.2",
    "vite": "^2.6.4",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1"
  },
  "build": {
    "appId": "com.toDoSimple.app",
    "productName": "toDoSimple",
    "copyright": "Copyright © 2021 呆呆兽的猫猫",
    "icon": "render/assets/favicon.ico",
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "render/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
